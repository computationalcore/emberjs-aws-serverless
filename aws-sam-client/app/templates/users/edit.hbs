{{request-loader
  visible=this.loading
  text=this.loadingText
}}
<h1 class="page-title">Edit Report - {{this.model.firstName}} {{this.model.lastName}}</h1>

<form {{action "editUser" this.model.id on="submit"}} class="user-form">
  <div class="form-group">
    <label for="firstName">First Name</label>
    {{input class="form-control" id="firstName" placeholder="First Name" type="text" value=this.model.firstName }}
  </div>
  <div class="form-group">
    <label for="lastName">Last Name</label>
    {{input class="form-control" id="lastName" placeholder="Last Name" type="text" value=this.model.lastName }}
  </div>
  <div class="form-group">
    <label for="address">Address</label>
    {{input class="form-control" id="address" placeholder="Address" type="text" value=this.model.address }}
  </div>
  <button type="submit" class="btn btn-primary">Save</button>
  {{#link-to "index" class="btn btn-default"}}Close{{/link-to}}
</form>